<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <table class="table">
    <%= for book <- @books do %>
    <tr>
      <td><%= link book.title, to: book_path(@conn, :show, book.id) %></td>
    </tr>
    <% end %>
  </table>
<% end %>
